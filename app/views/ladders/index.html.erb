<p id="notice"><%= notice %></p>

<h1>Listing Ladders</h1>

<table>
  <thead>
    <tr>
      <th>Ladder</th>
      <th>Player</th>
      <th>Status</th>
      <th>Result</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ladders.each do |ladder| %>
      <tr>
        <td><%= ladder.ladder %></td>
        <td><%= ladder.player %></td>
        <td><%= ladder.status %></td>
        <td><%= ladder.result %></td>
        <td><%= link_to 'Show', ladder %></td>
        <td><%= link_to 'Edit', edit_ladder_path(ladder) %></td>
        <td><%= link_to 'Destroy', ladder, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

