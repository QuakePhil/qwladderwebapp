<p id="notice"><%= notice %></p>

<h1>Listing Pings</h1>

<table>
  <thead>
    <tr>
      <th>Server</th>
      <th>Player</th>
      <th>Ping</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pings.each do |ping| %>
      <tr>
        <td><%= ping.server %></td>
        <td><%= ping.player %></td>
        <td><%= ping.ping %></td>
        <td><%= link_to 'Show', ping %></td>
        <td><%= link_to 'Edit', edit_ping_path(ping) %></td>
        <td><%= link_to 'Destroy', ping, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Ping', new_ping_path %>
